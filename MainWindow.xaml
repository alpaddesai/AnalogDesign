                <ImageBrush/>
            </Image.OpacityMask>
        </Image>
        <Button x:Name="DifferentialAmplifiers" Content="Analog Circuits" HorizontalAlignment="Left" Margin="193,364,0,0" VerticalAlignment="Top" Width="119" Click="DifferentialAmplifiers_Click" Height="20" Grid.Column="1"/>
        <Image Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="100" Margin="47,210,0,0" VerticalAlignment="Top" Width="100">
            <Image.OpacityMask>
                <ImageBrush/>
            </Image.OpacityMask>
        </Image>
