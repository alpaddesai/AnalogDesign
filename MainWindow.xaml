        xmlns:local="clr-namespace:AnalogDesign"
        mc:Ignorable="d"
        Title="AnalogDesign" Height="450" Width="597" MaxWidth="597" MaxHeight="450">
    <Grid HorizontalAlignment="Left" Width="772" Margin="0,0,-183,0">
