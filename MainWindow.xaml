        <Image Margin="341,0,255,287" Source="currentamplifier.png" Stretch="Fill" Grid.ColumnSpan="2"/>
        <Label Grid.ColumnSpan="2" Content="Click for details" HorizontalAlignment="Left" Margin="199,152,0,0" VerticalAlignment="Top" Height="24" Width="100" FontSize="8"/>
        <Label Grid.ColumnSpan="2" Content="Click for details" HorizontalAlignment="Left" Margin="389,157,0,0" VerticalAlignment="Top" Height="24" Width="100" FontSize="8"/>
        <Label Grid.ColumnSpan="2" Content="Click for details" HorizontalAlignment="Left" Margin="243,340,0,0" VerticalAlignment="Top" Height="19" Width="69" FontSize="8"/>
        <Button x:Name="Operational_Amplifers" Grid.ColumnSpan="2" Content="Operational Amplifiers" HorizontalAlignment="Left" Margin="386,364,0,0" VerticalAlignment="Top" Width="131" Click="Operational_Amplifers_Click"/>
        <Label Grid.ColumnSpan="2" Content="Click for details" HorizontalAlignment="Left" Margin="420,340,0,0" VerticalAlignment="Top" Height="19" Width="69" FontSize="8"/>
        <Image Grid.ColumnSpan="2" Margin="301,186,204,84" Source="Image4.png" Stretch="Fill"/>

    </Grid>
